<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.edu.unisep.comprefacil.activity.NovaListaActivity">

    <ListView
        android:id="@+id/lista"
        android:layout_width="match_parent"
        android:layout_height="390dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"></ListView>

    <EditText
        android:id="@+id/txtCriarLista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="@string/product_hint"
        android:inputType="text"
        android:text="@string/criar_lista" />

    <Button
        android:id="@+id/CriarLista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txtCriarLista"
        android:layout_marginLeft="47dp"
        android:layout_marginStart="47dp"
        android:layout_toEndOf="@+id/txtCriarLista"
        android:layout_toRightOf="@+id/txtCriarLista"
        android:nestedScrollingEnabled="false"
        android:onClick="novaLista"
        android:text="@string/add" />
</RelativeLayout>